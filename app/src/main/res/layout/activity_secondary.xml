<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="16dp"
tools:context=".SecondaryActivity">

    <ImageView
        android:id="@+id/ivSecondClock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_baseline_access_alarm_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="ivSecondClock"/>

    <TextView
        android:id="@+id/tvSecondClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clock is ticking ..."
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSecondClock"
        android:transitionName="tvSecondClock"/>
</androidx.constraintlayout.widget.ConstraintLayout>